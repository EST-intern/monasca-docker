{
  "name": "Thresh",
  "description": "Sets up Thresh",
  "json_class": "Chef::Role",
  "default_attributes": {
    "java": {
      "install_flavor": "openjdk",
      "jdk_version": "7"
    },
    "mon_thresh": {
      "start": false
    },
    "storm": {
      "enable": false,
      "nimbus": {
        "host": "localhost"
      },
      "ui": {
        "port": "8088"
      },
      "zookeeper": {
        "quorum": [
          "zookeeper"
        ]
      }
    }
  },
  "override_attributes": {
  },
  "chef_type": "role",
  "run_list": [
    "recipe[storm::nimbus]",
    "recipe[storm::supervisor]",
    "recipe[mon_thresh]"
  ],
  "env_run_lists": {
  }
}
