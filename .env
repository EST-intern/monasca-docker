#### Keystone settings ####
# for usage of external Keystone service:
#docker-compose-KS.yml     (Keystone service with own MySQL and own network)
#docker-compose-metric.yml (metric-pipeline without Keystone service)
#docker-compose-log.yml    (log pipeline)

# !!!! Please adapt IP address !!!!
MON_KEYSTONE_URL=http://172.31.0.216:5000
# if you use Keystone from OpenStack distribution:
#MON_KEYSTONE_URL=http://172.31.0.216/identity

# needed for docker-compose-KS.yml not for OpenStack distribution
MON_KEYSTONE_IP_ADDR=172.31.0.216

#set base directory for volumes
MON_DOCKER_VOL_ROOT=/opt/monasca-containers

